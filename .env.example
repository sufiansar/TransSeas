PORT=5333
NODE_ENV=development

# Database
DATABASE_URL=mongodb+srv://USERNAME:PASSWORD@CLUSTER.mongodb.net/DATABASE?retryWrites=true&w=majority

# Security
BCRYPTJS_SALT=12

# Frontend
FONTEND_URL=http://localhost:3000

# Super Admin
SUPERADMIN_NAME=Admin
SUPERADMIN_EMAIL=admin@example.com
SUPERADMIN_PASSWORD=your_password_here

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Redis
REDIS_PORT=11802
REDIS_HOST=your_redis_host
REDIS_PASS=your_redis_password
REDIS_USERNAME=default

# AWS S3
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=your_region
AWS_S3_BUCKET_NAME=your_bucket_name

# JWT
ACCESSTOKEN_SECRET=your_access_token_secret
ACCESSTOKEN_EXPIRESIN=5d
REFRESHTOKEN_SECRET=your_refresh_token_secret
REFRESHTOKEN_EXPIRESIN=7d

# OpenRouter
OPENROUTER_API_KEY=your_openrouter_api_key

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# SMTP (Email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_app_password
SMTP_FROM=Your Name <your_email@gmail.com>

# Ngrok
NGROK_AUTHTOKEN=your_ngrok_authtoken

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback
GOOGLE_REFRESH_TOKEN=your_google_refresh_token
