generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  name         String?
  email        String @unique
  passwordHash String
  phone        String?
  additionalPhone String?
  role         UserRole @default(VENDOR)
  profileImage String?
  address      String?
  country      String?
  city         String?
  otp          Int?
  isVerified   Boolean @default(true)
  isActive     Boolean @default(true)
  userStatus   UserStatus @default(ACTIVE)
  companyName  String?
  categoryId   String? @db.ObjectId
  category     category? @relation(fields: [categoryId], references: [id])
  website      String?
  designation   String?
  rfqId        String? @db.ObjectId
  rfq          RFQ? @relation(fields: [rfqId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  orders       Order[]
  projects     Project[]
  commoditiId String? @db.ObjectId
  commodity    Commodity? @relation(fields: [commoditiId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("users")
}

model Invite {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  role      UserRole
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Project {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  clientName    String?
  clientEmail    String?
  vendorId        String? @db.ObjectId
  vendor          User? @relation(fields: [vendorId], references: [id], onDelete: SetNull)
  referenceNo   String @unique
  commoditiId      String? @db.ObjectId
  commodity        Commodity? @relation(fields: [commoditiId], references: [id],onDelete: SetNull)
  status        ProjectStatus @default(ACTIVE)
  isActive      Boolean @default(true)
  totalPrice    Float?
  categoryId       String? @db.ObjectId
  category         category? @relation(fields: [categoryId], references: [id])
  currency      Currency? @default(USD)
  country       String?
  location      String
  documents     documents[]
  manufacturerPackages ManufacturerPackage[]
  rfqs          RFQ[]
  quotations     Quotation[]
  // costSheets    CostSheet[]
  // proposals     Proposal[]
  // activities    ActivityLog[]
  // assignedUsers ProjectUser[]
  items         Items[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
@@index([vendorId, referenceNo])
  @@map("projects")
}
model documents {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  fileName  String
  fileType  String
  fileUrl   String

  projectId String  @db.ObjectId
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId])
  @@map("documents")
}
model ManufacturerPackage {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  packageName String
  description String?

  projectId   String  @db.ObjectId
  project     Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([projectId])
  @@map("manufacturerPackages")
}

model Items {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  itemTitle       String?
  itemcode        String
  manufacturer    String?
  description     String?
  quantity        Float                    
  unit            Unit @default(PIECE)
  price           Float?
  remarks         String?                  
  status          ItemsStatus @default(PENDING)
  rfqId           String? @db.ObjectId
  rfq             RFQ? @relation(fields: [rfqId], references: [id], onDelete: SetNull)
  projectId       String @db.ObjectId
  project         Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  commodityId String @db.ObjectId
  commodity   Commodity @relation(fields: [commodityId], references: [id], onDelete: Cascade)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([projectId, rfqId])
  @@map("items")
}


model category {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  name      String @unique
  projcet   Project[]
  vendors   User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("categories")
}
model Commodity {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  name      String @unique

  rfq       RFQ[]
  vendors   User[]
  project   Project[]
  items     Items[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("commodities")
}



model RFQ {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  rfqNo       String @unique
  projectId   String @db.ObjectId
  project     Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  vendors    User[]
  items       Items[]
  terms       String?
  dueDate    DateTime
  emailSubject String?
  rfqStatus   rfqStatus @default(SENT)
  commodityId    String? @db.ObjectId
  commodity      Commodity? @relation(fields: [commodityId], references: [id])
  quatationId    String? @db.ObjectId
  quotation     Quotation? @relation(fields: [quatationId], references: [id], onDelete: SetNull)
  emailMessage String?
  followUpEmail String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
@@index([projectId])
  @@map("rfqs")
}

model Quotation {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  number        String   @unique   
  vendorid   String?
  
  subject       String?
  sourceFile    String?   
  fileType      FileType?
  status        QuotationStatus @default(PARSED)
  rfq           RFQ[]
  projectId     String   @db.ObjectId
  project       Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  // items         Items[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt


  @@map("quotations")
}




enum rfqStatus {
  SENT
  RESPONDED
  FOLLOW_UP
  OVERDUE
  CANCELED
}

enum FileType {
  PDF
  EXCEL
}

enum QuotationStatus {
 NEEDS_REVIEW
  RECEIVED
  APPROVED
 PARSED
}






model Order {
  id          String @id @default(auto()) @map("_id") @db.ObjectId

  userId      String? @db.ObjectId
  user        User? @relation(fields: [userId], references: [id])

  status      OrderStatus @default(PENDING)
  amount      Float
  orderDate   DateTime @default(now())

  shipment    Shipment?    @relation("OrderShipment")
  payment     Payment?     @relation("OrderPayment")
  transaction Transaction? @relation("OrderTransaction")
  delivery    Delivery?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  @@index([userId])
  @@map("orders")
}




model Shipment {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  carrier        String
  trackingNumber String
  shippedDate    DateTime
  deliveryDate   DateTime?
  orderId        String @unique @db.ObjectId
  order          Order @relation("OrderShipment", fields: [orderId], references: [id], onDelete: Cascade)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  @@map("shipments")
}





model Delivery {
  id        String @id @default(auto()) @map("_id") @db.ObjectId

  orderId   String @unique @db.ObjectId
  order     Order @relation(fields: [orderId], references: [id])

  name      String?
  email     String?
  address   String
  city      String
  phone     String
  postalCode String?
  deliveryCharge Float?
  status    DeliveryStatus @default(PROCESSING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("deliveries")
}

model Payment {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  method    String
  amount    Float
  userId    String?
  orderId   String? @unique @db.ObjectId
  order     Order? @relation("OrderPayment", fields: [orderId], references: [id], onDelete: SetNull)
  status    PAYMENT_STATUS @default(PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("payments")
}

model Transaction {
  id        String @id @default(auto()) @map("_id") @db.ObjectId

  orderId   String @unique @db.ObjectId
  order     Order @relation("OrderTransaction", fields: [orderId], references: [id], onDelete: Cascade)

  status    String
  transactionDate DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("transactions")
}


enum UserRole {
  SUPER_ADMIN
  ADMIN
  VENDOR
}


enum ProjectStatus {
  ACTIVE
  INACTIVE
  COMPLETED
  ON_HOLD
  CANCELED
}

enum Currency {
  USD
  EUR
  GBP
  JPY
  AUD
  CAD
  CHF
  CNY
  SEK
  NZD
  AED
  SAR
  QAR
  KWD
  OMR
  BDT
  PKR
  INR

}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  DELETED
}
enum ItemsStatus {
  PENDING
  APPROVED
  EIDITED
  LOCKED
}
enum Unit {
  PIECE        // pcs
  SQUARE_METER // sqm
  LINEAR_METER // lm
  KILOGRAM     // kg
  SET
  LOT
  CUBIC_METER  // m3
  TONNE        // ton
  ROLL
  SHEET
  BOX
}


enum PAYMENT_STATUS {
  PENDING
  PAID
  CANCELED
  FAILED
  REFUNDED
  PARTIALLY_REFUNDED
}


enum DeliveryStatus {
  PROCESSING
  ON_THE_WAY
  DELIVERED
  RETURNED
  CANCELED
}

enum OrderStatus {
  PENDING
  PROCESSING
  REJECTED
  DELIVERED
}













